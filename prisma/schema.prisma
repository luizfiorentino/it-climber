generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Vacancy {
  id             Int        @id @default(autoincrement())
  title          String
  company        String
  link           String?
  description    String?
  feedback       String?
  recruiter      String?
  location       String?
  language       String?
  applicationDate DateTime?
  
  // Define the many-to-many relation to the Tag model
  tags           Tag[]      @relation("VacancyToTag")
}

// Define the Tag model
model Tag {
  id        Int      @id @default(autoincrement())
  name      String
  vacancies Vacancy[] @relation("VacancyToTag")
}

